---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="https://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.rss_description }}</description>
    <link>{{ site.BASE_PATH_FOR_RSS }}/</link>
    <atom:link href="{{ site.BASE_PATH_FOR_RSS }}/{{ site.rss_path }}" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:10 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <content type="html" xml:base="{{ post.url | absolute_url | xml_escape }}">
          <![CDATA[{{ post.content | strip }}]]>
        </content>
        {% assign post_summary = post.description | default: post.excerpt %}
        <summary type="html">
          <![CDATA[{{ post_summary | strip_html | normalize_whitespace }}]]>
        </summary>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title }}" />
        <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
